<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ExamplesApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_foreground"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatKitExamples">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ChatKitExamples">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".simple.SimpleChatActivity"
            android:label="Simple Chat"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".config.ConfigurationActivity"
            android:label="Configuration"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".conversation.ConversationManagementActivity"
            android:label="Conversation Management"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".context.ContextProviderActivity"
            android:label="Context Providers"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".compose.ComposeExampleActivity"
            android:label="Compose Example"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".full.FullFeatureActivity"
            android:label="Full Feature"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".advanced.AdvancedApiActivity"
            android:label="Advanced APIs"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>
