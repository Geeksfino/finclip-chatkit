# Server Configuration
PORT=3200
HOST=0.0.0.0
NODE_ENV=development

# Agent Configuration
DEFAULT_AGENT=scenario  # scenario or llm
SCENARIO_DIR=./src/scenarios
SCENARIO_DELAY_MS=200

# LLM Provider Configuration (for LLM mode)
LLM_PROVIDER=gemini  # gemini or deepseek
GEMINI_API_KEY=your-gemini-api-key-here
DEEPSEEK_API_KEY=your-deepseek-key
DEEPSEEK_MODEL=deepseek-chat

# Alternative: Direct DeepSeek
# LLM_PROVIDER=deepseek
# DEEPSEEK_API_KEY=your-deepseek-key
# DEEPSEEK_MODEL=deepseek-chat

# SSE Configuration
SSE_RETRY_MS=3000
SSE_HEARTBEAT_MS=30000

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# CORS
CORS_ORIGIN=*
